# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Use static frameworks for Firebase (required for Firebase Auth Swift code)
use_frameworks! :linkage => :static

# Disable flipper as it conflicts with static frameworks
$RNFirebaseAsStaticFramework = true

# Build Hermes from source to include dSYM for crash symbolication
ENV['RCT_BUILD_HERMES_FROM_SOURCE'] = '1' if ENV['ARCHIVE_BUILD'] == '1'

# Workaround for Xcode 16.3
def __apply_Xcode_16_3_RC_post_install_workaround(installer)
  installer.pods_project.targets.each do |target|
    if target.name == 'RCT-Folly'
      target.build_configurations.each do |config|
        # Disable the specific problematic code
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= []
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_HAVE_CLOCK_GETTIME=1'
      end
    end
  end
end

# Linkage is configured globally above with use_frameworks!

target 'KidsActivityTracker' do
  config = use_native_modules!

  # Google Maps for react-native-maps (required for Android parity)
  pod 'GoogleMaps', '~> 7.4'
  pod 'Google-Maps-iOS-Utils', '~> 4.2'

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    # Enable Hermes
    :hermes_enabled => true,
    # Disable the new architecture for now
    :fabric_enabled => false,
    :new_arch_enabled => false
  )

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix for C++ compilation issues
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++20'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'

        # Remove duplicate -lc++ from OTHER_LDFLAGS
        if config.build_settings['OTHER_LDFLAGS']
          flags = config.build_settings['OTHER_LDFLAGS']
          if flags.is_a?(Array)
            # Remove duplicate -lc++ entries, keep only one
            lc_count = flags.count { |f| f == '-lc++' }
            if lc_count > 1
              flags.delete('-lc++')
              flags << '-lc++'
            end
            config.build_settings['OTHER_LDFLAGS'] = flags
          end
        end

        # Suppress warnings from Pods
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES' if target.name.start_with?('RCT-Folly')

        if target.name == 'RCT-Folly'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_NO_CONFIG=1'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_MOBILE=1'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_USE_LIBCPP=1'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'FOLLY_CFG_NO_COROUTINES=1'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -DFOLLY_NO_CONFIG -DFOLLY_MOBILE=1 -DFOLLY_USE_LIBCPP=1 -DFOLLY_CFG_NO_COROUTINES=1'
        end

        # Generate Hermes dSYM for crash symbolication
        if target.name == 'hermes-engine'
          config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
        end
      end
    end
    
    # Fix Folly build errors by disabling problematic templates
    __apply_Xcode_16_3_RC_post_install_workaround(installer)

    # Include custom Config.xcconfig in Pods xcconfig files for API keys
    pods_project_path = installer.sandbox.project_path
    target_support_files = "#{pods_project_path}/../Target Support Files/Pods-KidsActivityTracker"

    ['debug', 'release'].each do |config|
      xcconfig_path = "#{target_support_files}/Pods-KidsActivityTracker.#{config}.xcconfig"
      if File.exist?(xcconfig_path)
        content = File.read(xcconfig_path)
        include_line = '#include "../../../Config.xcconfig"'
        unless content.include?(include_line)
          File.write(xcconfig_path, "#{include_line}\n#{content}")
        end
      end
    end
  end
end
